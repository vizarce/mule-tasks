#%RAML 1.0
title: Accounts API

types:
  AccountType: !include /datatypes/AccountType.raml
  Account: !include /datatypes/Account.raml

/accounts:
  get:
    headers:
      requester_id:
        displayName: Requester ID
        type: integer
        required: true
    queryParameters:
      account_type:
        type: AccountType
        required: false
      account_name:
        required: false
    responses:
      200:
        body:
          application/json:
            type: array
            items: Account
            examples:
              output: !include /examples/Accounts.raml
  post:
    headers:
      requester_id:
        displayName: Requester ID
        type: integer
        required: true
    body:
      application/json:
        type: array
        items: Account
        examples:
          input: !include /examples/AccountsPost.raml
    responses:
      201:
        body:
          application/json:
            example: !include /examples/ResponseAccountsCreated.json
          
        

      